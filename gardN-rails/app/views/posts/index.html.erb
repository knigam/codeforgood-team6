<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Plant</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Instructions</th>
      <th>Upkeep</th>
      <th>Benefits</th>
      <th>Tips</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.plant_id %></td>
        <td><%= post.longitude %></td>
        <td><%= post.latitude %></td>
        <td><%= post.instructions %></td>
        <td><%= post.upkeep %></td>
        <td><%= post.benefits %></td>
        <td><%= post.tips %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
